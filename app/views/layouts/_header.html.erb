<header class="navbar navbar-fixed-top navbar-inverse">
	
	<!-- <div class="container"> -->

	<div class="navbar-header">
		<a class="navbar-brand" href="<%= home_path %>" >Let's<i class="fa fa-heart"></i> Ask Phrase</a>
		<!--トグルボタンの設置 幅が狭くなったときに表示するボタン-->
		<button type="button" class="navbar-toggle " data-toggle="collapse" data-target="#nav-content">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>

	</div>

	<div id="nav-content" class="collapse navbar-collapse">
		<div  class="nav navbar-nav navbar-right">
			<!--リンクのリスト メニューリスト-->
			<ul class="nav navbar-nav">

				<% if signed_in? %>
				<li>
					<a class="navbar-brand" href="<%= received_messages_path %>" >
						<i class="fa fa-bell"></i>
						<%= unread(current_user) %>
					</a>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <small><%= current_user.name %></small> <b class="caret"></b></a>
					<ul class="dropdown-menu" role="menu">
					
						<li>
							<%= link_to "Profile", current_user %>
						</li>
						<li>
							<%= link_to "Settings", edit_user_path(current_user) %>
						</li>
						<li class="divider"></li><!-- line -->
						<li>
							<%= link_to "Sign out", signout_path, method: "delete" %>
						</li>
						<li class="divider"></li><!-- line -->
					</ul>
				</li>
				<% else %>
				<li>
					<a class="navbar-brand" href="<%= home_path %>" ><i class="fa fa-home"></i> Home</a>
				</li>
				<li>
					<a class="navbar-brand" href="<%= about_path %>" ><i class="fa fa-info-circle"></i> about</a>
				</li>
				<% end %>
			</ul>
		</div>
	</div>

	<!-- </div> -->

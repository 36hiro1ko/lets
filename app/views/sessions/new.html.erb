<% provide(:title, "Sign in") %> <h1>Sign in</h1>
<div class="container">
	<div class="row">
		<div id="loginbox" style="margin-top:20px;" class="col-md-6 col-md-offset-3">
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">
						Sign in
					</div>
				</div>

				<div style="padding-top:30px" class="panel-body" >
					<%= form_for(:session, url: sessions_path) do |f| %>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
						<%= f.text_field :email, placeholder: "email", class: "form-control" %>
					</div>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-lock"></i></span>
						<%= f.password_field :password, placeholder: "password", class: "form-control"  %>
					</div>
					<div class="col-sm-12 controls">
						<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
						<% end %>
					</div>

					<div class="form-group">
						<div class="col-md-12 control">
							<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
								<p>
									Don't have an account!<%= link_to "Sign up now!", signup_path %>
								</p>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
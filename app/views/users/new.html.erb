<div class="container">
	<div class="row">
		<h1>Sign up new user</h1>

		<div id="loginbox" style="margin-top:20px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">
						Sign up new user
					</div>
				</div>

				<div style="padding-top:30px" class="panel-body" >
					<%= render 'shared/error_messages' %>

					<%= form_for @user, :html =>{class: 'form-horizontal', role: 'form', id: 'loginform'} do |f| %>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<%= f.text_field :name, placeholder: "name", class: "form-control" %>
					</div>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
						<%= f.text_field :email, placeholder: "email", class: "form-control" %>
					</div>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-lock"></i></span>
						<%= f.password_field :password,placeholder: "password", class: "form-control" %>
					</div>

					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-lock"></i></span>
						<%= f.password_field :password_confirmation,placeholder: "password confirmation", class: "form-control" %>
					</div>

					<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
					<% end %>

				</div>
				<!-- <div style="padding-top:30px" > -->
			</div>
			<!--  <div class="panel panel-info" > -->
		</div>
		<!-- -<div id="loginbox"... > -->
	</div>
</div>